{
    "compilerOptions": {
        "target": "ES5",
        "useDefineForClassFields": true,
        "lib": ["ESNext", "DOM", "ES2015", "ES2020.String"],
        "moduleResolution": "Node",
        "strict": true,
        "module": "esnext",
        "importHelpers": true
    },
    "include": ["src/**/*", "rollup.config.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}

